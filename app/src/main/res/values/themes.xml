<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WifiBillManagerUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_7</item>
        <item name="colorSecondaryVariant">@color/color_6</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!--navigation menu font family-->
    <style name="NavigationMenuViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <!-- ProgressBar Color. -->
    <style name="ProgressBar">
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="font_family" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="text_font_family_one" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
    </style>

    <style name="text_font_family_two" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/mulish_semibold</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>


    <style name="Theme.WifiBillManagerUser" parent="Base.Theme.WifiBillManagerUser" />
</resources>